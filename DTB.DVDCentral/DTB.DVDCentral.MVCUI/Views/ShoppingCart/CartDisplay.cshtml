@model DTB.DVDCentral.BL.Models.ShoppingCart
<div>
    <dl class="dl-horizontal">
        <dt>
            Count
        </dt>
        <dd>
            @{
                int count = Model.TotalCount;
                @Html.ActionLink(count.ToString() + " items", "Index");
            }

        </dd>
        <dd>
            @Html.ActionLink("View Cart", "Index")
        </dd>
        <dd>
            @Html.ActionLink("Check Out", "CheckOut")
        </dd>
        <dd>
            @Html.ActionLink("View Orders", "Index", "Order")
        </dd>
            
    </dl>
</div>

